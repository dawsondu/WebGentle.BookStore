<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book Store Application</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm  navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/images/logo.jpg" width="60" height="60" />
                    Book Store
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" href="#">Login</a>
                            <a class="btn btn-primary" href="#">Register</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a href="/" class="nav-link text-dark">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="/home/aboutus" class="nav-link text-dark">About</a>
                        </li>
                        <li class="nav-item">
                            <a href="/home/contactus" class="nav-link text-dark">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a href="/book/getallbooks" class="nav-link text-dark">All books</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderSection("breadcrumb", required: false)

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            Copyright &copy; Book Store @DateTime.Now.Year
        </div>
    </footer>
    <script src="~/jquery/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script> 
    @RenderSection("scripts", required: false)


</body>
</html>

